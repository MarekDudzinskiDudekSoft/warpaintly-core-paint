<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.8.xsd">

    <changeSet id="create_t_paint" author="marek_dudzinski">

        <createTable tableName="t_paint">
            <column name="id" type="bigserial">
                <constraints primaryKey="true" primaryKeyName="pk_paint"/>
            </column>
            <column name="uuid" type="varchar(31)">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="brand" type="varchar(63)">
                <constraints nullable="false"/>
            </column>
            <column name="color_group" type="varchar(63)">
                <constraints nullable="false"/>
            </column>
            <column name="paint_type" type="varchar(63)">
                <constraints nullable="false"/>
            </column>
            <column name="code" type="varchar(63)">
                <constraints nullable="true"/>
            </column>
        </createTable>

    </changeSet>
</databaseChangeLog>